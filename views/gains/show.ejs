<%- include('../partials/header') %> <%= title %>
<table id="done-list">
  <thead>
    <tr>
      <th>Goal</th>
      <th>Date Created</th>
      <th>Date Accomplished</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% doneGoals.forEach(function(doneGoal) { %> <% if (doneGoal.accomplished) {
    %>
    <tr>
      <td><%= doneGoal.goal %></td>
      <td><%= doneGoal.createdAt.toString().slice(0, 16) %></td>
      <td><%= doneGoal.updatedAt.toString().slice(0, 16) %></td>
      <td>
        <a href="/goals/<%= doneGoal._id %>">RE-VISIT</a>
        <form
          id="delete-done-goal-form"
          name="doneGoalId"
          action="/gains/done/<%= doneGoal._id %>?_method=DELETE"
          method="POST"
        >
          <button type="submit">DELETE</button>
        </form>
      </td>
    </tr>
    <% } %> <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>
